<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"


    card_view:cardUseCompatPadding="true"

    >
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/serial_no"
           android:text="1"
           android:layout_centerVertical="true"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/dot"
           android:text="@string/dot"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/serial_no"
           />

   </RelativeLayout>
    <!--card_view:cardCornerRadius="4dp"-->
    <!--card_view:contentPaddingTop="4dp"-->
    <!--card_view:contentPaddingLeft="5dp"-->
    <!--card_view:paddingStart="5dp"-->
    <!--card_view:paddingEnd="4dp"-->
    <!--card_view:cardBackgroundColor="@color/colorGrey"-->
    <!--card_view:cardElevation="4dp"-->
    <!--card_view:cardMaxElevation="4dp"-->
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"

        >

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:text="India"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
            <!--android:layout_toRightOf="@+id/dot"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs"
            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:id="@+id/versus"
            android:layout_below="@+id/team_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WestIndies"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/team_name2"
            android:layout_below="@+id/versus"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="260dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="16dp"
            android:id="@+id/date_text"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="2010:14:07"
            android:layout_gravity="end"
            android:layout_below="@+id/date_text"/>


    </RelativeLayout>


    </android.support.v7.widget.CardView>
